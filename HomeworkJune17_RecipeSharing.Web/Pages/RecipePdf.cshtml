@model HomeworkJune17_RecipeSharing.Web.Models.RecipePdfModel
@{
    <div class="container mt-5">
        <div style="text-align:center">
            <svg xmlns="http://www.w3.org/2000/svg" width="55" height="55" fill="currentColor" class="bi bi-card-heading" viewBox="0 0 16 16">
                <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2z" />
                <path d="M3 8.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m0-5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5z" />
            </svg>
            <h1 style="font-size: 50px; font-family:Arial; ">Recipe for @Model.Title</h1>
        </div>

        <h1 style="margin-left: 50px; margin-top:25px; font-size:45px; font-family:'Javanese Text';">Ingredients:</h1>

        <div style="margin-top:-30px;">
            @foreach (var i in Model.Ingredients)
            {

                <h2 style="font-size:30px; margin-left: 100px; ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#28A745" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </svg>
                    <span style="font-family:sans-serif; font-weight:100">@i</span>
                </h2>
            }
        </div>
        <br />
        <div style="text-align:left">
            <hr style="width:50vh; margin-left:0px;" />
        </div>
        <h1 style="margin-left: 50px; font-size:45px; font-family:'Javanese Text'; ">Steps:</h1>
        <div style="margin-top:-30px;">
            @foreach (var s in Model.Steps)
            {
                <h2 style="font-size:30px; margin-left: 70px; ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#17A2B8" class="bi bi-list-check" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5M3.854 2.146a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 3.293l1.146-1.147a.5.5 0 0 1 .708 0m0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 7.293l1.146-1.147a.5.5 0 0 1 .708 0m0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0" />
                    </svg>
                    <span style="font-family:sans-serif; font-weight:100">@s</span>
                </h2>
            }
        </div>
        <div style="text-align:center; margin-top:-70px;">
            <h1 style="font-size: 150px; font-family:'Segoe Script';">Enjoy!</h1>
        </div>
    </div>
}
